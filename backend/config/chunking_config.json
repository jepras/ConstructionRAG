{
  "chunking": {
    "min_content_length": 20,
    "exclude_categories": ["Header", "Footer", "PageBreak", "Title"],
    "enable_list_grouping": true,
    "max_list_items_per_group": 10,
    "include_section_titles": true,
    "format_tables_with_context": true,
    "format_images_with_context": true,
    "prioritize_vlm_captions": true,
    "fallback_to_original_text": true
  },
  "legacy_chunking": {
    "chunk_size": 1000,
    "chunk_overlap": 200,
    "strategy": "semantic",
    "separators": ["\n\n", "\n", " ", ""],
    "min_chunk_size": 100,
    "max_chunk_size": 2000
  }
} 