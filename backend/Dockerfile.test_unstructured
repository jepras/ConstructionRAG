# Test Dockerfile for Unstructured[pdf] with system packages
# This mimics the Beam environment we need for hi_res strategy

FROM python:3.11-slim

# Install system dependencies that Unstructured[pdf] needs for hi_res strategy
RUN apt-get update && apt-get install -y \
    # Graphics libraries for OpenCV
    libgl1-mesa-glx \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libxrender1 \
    # Additional dependencies that might be needed
    libgomp1 \
    libgcc-s1 \
    libstdc++6 \
    # Font dependencies for PDF processing
    fonts-liberation \
    # PDF processing dependencies
    poppler-utils \
    # OCR dependencies
    tesseract-ocr \
    tesseract-ocr-dan \
    # Clean up
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Set working directory
WORKDIR /app

# Copy requirements
COPY beam_requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r beam_requirements.txt

# Download NLTK data (this is what was missing before)
RUN python -c "import nltk; nltk.download('punkt')"

# Copy test script
COPY test_unstructured_docker.py .

# Copy test data (mount this when running)
# The test script will look for PDFs in ../../data/external/construction_pdfs

# Test that Unstructured can import
RUN python -c "from unstructured.partition.pdf import partition_pdf; print('âœ… Unstructured import test passed')"

# Default command runs the test
CMD ["python", "test_unstructured_docker.py"] 